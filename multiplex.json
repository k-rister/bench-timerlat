{
  "presets": {
  },
  "validations": {
    "integer_ge_zero": {
      "description": "a whole number >= 0",
      "args": [
          "dma-latency",
	  "deepest-idle-state"
      ],
      "vals": "[0-9]*$"
    },
  
    "integer_gt_zero": {
      "description": "a whole number > 0",
      "args": [
	      "duration",
	      "period",
	      "warm-up"
      ],
      "vals": "^[1-9][0-9]*$"
    },
    "integer_range": {
      "description": "a range of whole numbers >= 0",
      "args": [
	 "cpus",
         "house-keeping"
      ],
      "vals": "(\\d+(-\\d+)?(,\\s*\\d+(-\\d+)?)*|\\d+(-\\d+)?)"
    },
    "priority": {
      "description": "priority of the timerlat process",
      "args": [
	 "priority"
      ],
      "vals": "^[for]:([0-9]|[1-9][0-9])$"
    },
    "onoff": {
      "description": "on|off",
      "args": [
	 "smt"
      ],
      "vals": "on|off"
    },
    "thread_type": {
      "description": "thread type (user/kernel)",
      "args": [
        "thread"
      ],
      "vals": "u|k"
    }
  }
}

